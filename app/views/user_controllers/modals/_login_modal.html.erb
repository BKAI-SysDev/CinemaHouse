<div class="modal" id="loginModal">
  <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
          <!-- Modal Header -->
          <div class="modal-header">
              <h4 class="modal-title">Đăng nhập</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
              <form>
                  <div class="form-group">
                      <label for="exampleInputEmail1">Email address</label>
                      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                          placeholder="Enter email">
                  </div>
                  <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <a href="#">Forgot password?</a>
                      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                  </div>
                  <div class="form-check d-inline-block mb-2">
                      <input type="checkbox" class="form-check-input" id="exampleCheck1">
                      <label class="form-check-label" for="exampleCheck1">Remember me</label>
                  </div>
                  <div class="text-center">
                      <button type="submit" class="btn mb-3" id="submitModalLogin">Submit</button>
                      <span>Chưa có tài khoản</span>
                      <a href="#">Đăng kí ngay</a>
                  </div>
              </form>
          </div>

          <!-- Modal footer -->
          <div class="modal-footer text-center">
              <div class="m-auto">
                  <span>Hoặc đăng nhập với</span>
                  <div class="social-login-logo mt-2">
                      <button class="btn btn-outline-primary login-social-btn text-center">
                  <i class="fab fa-facebook-f d-inline-block"></i>
                </button>
                      <button class="btn btn-outline-danger login-social-btn text-center">
                  <i class="fab fa-google d-inline-block"></i>
                </button>
                      <button class="btn btn-outline-success login-social-btn text-center">
                  <i class="fab fa-instagram d-inline-block"></i>
                </button>

                  </div>
              </div>
          </div>
      </div>
  </div>
</div>